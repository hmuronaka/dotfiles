alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../..."
alias ~="cd ~"

alias b='bundle'
alias bi='bundle install'
alias be='bundle exec'
alias ber='bundle exec rails'
alias bers='ber s'
alias berc='ber c'
alias spec='bundle exec spec'
alias bec='be cap'
