nmap gp :pc<cr>
nmap gn :nc<cr>
nmap <C-o> :pj<cr>
nmap <C-i> :nj<cr>
"nmap ni :ni<cr>
"nmap np :pi<cr>

nmap gf :xccmd jumpToDefinition<cr>

imap <C-j> <ESC>
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l
noremap <C-h> <C-w>h

"inoremap <C-j> <Down>
"inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>

vnoremap <C--><C--> :xccmd commentAndUncommentCurrentLines<CR>
nnoremap <C--><C--> :xccmd commentAndUncommentCurrentLines<CR>

set hlsearch
highlight Search guibg=brown
